@import "../../templates/footer/footer.wxss";
page{
  background: #EEEEEE;
}
.active{
  background: #fff;
  box-shadow: 0px 2px 2px #888888;
  margin-bottom: 20rpx;
} 
.active .active-title{
  display: flex;
  justify-content: center;
  align-items: center;  
  flex-direction: row;
  width: 100%;
}
.active .active-title .title{
  font-size:50rpx;
  font-weight: bolder;
  font-family: "宋体";  
}
.active-items{
  display: flex;
  justify-content: center;
  align-items: center;  
  flex-direction: column;
  width: 100%;
}
.line-one{
  height: 0rpx;
  width: 85%;
  border: 1px solid #48A792;
  background: #48A792;
  margin-left: 5%;
}
.line-two{
  margin-top: 10rpx;
  height: 0rpx;
  width: 85%;
  border-top: .1px solid #48A792;
  background: #48A792;
  margin-left: 10%;
}
.active-items .active-item{
  width: 80%;
}
.active-items .active-item .title{
  color: #49A596;
  font-size:35rpx; 
  font-weight:bold; 
  font-family: "宋体";
}
.active-button{
  text-align: right;
  padding: 50rpx;
}
.active-button .true{
  background: #49A596;
  font-weight: bold;
  color: #fff;
}
