<template name="banner">
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">热门书籍</view>
    <view class="weui-panel__bd">
      <navigator url='../../pages/bookItem/bookItem?title={{bookItem}}' open-type='navigate'  class="weui-media-box weui-media-box_appmsg" catchtap='navigateToNew'  hover-class="weui-cell_active">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src="{{}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">标题</view> 
          <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
        </view>
      </navigator>
    </view>
    <view class="weui-panel__ft">
      <view class="weui-cell weui-cell_access weui-cell_link">
        <view class="weui-cell__bd">查看更多</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>
</template>